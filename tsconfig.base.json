{
  "compilerOptions": {
    "sourceMap": false,
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "removeComments": false,

    "baseUrl": "./",
    "paths": {
      "@node/*": ["src/node/*"],
      "@api/*": ["src/api/*"],
      "@util/*": ["src/util/*"]
    }
  }
}
